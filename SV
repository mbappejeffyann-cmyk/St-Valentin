    function bougerNon() {
      const bouton = document.getElementById("non");

      const largeur = window.innerWidth - bouton.offsetWidth;
      const hauteur = window.innerHeight - bouton.offsetHeight;

      const x = Math.random() * largeur;
      const y = Math.random() * hauteur;

      bouton.style.left = x + "px";
      bouton.style.top = y + "px";
    }
  </script>

